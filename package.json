{
  "name": "gestures-drawing-assistant",
  "version": "1.0.0",
  "description": "Gestures Drawing Assistant - Electron App",
  "main": "dist/main/main/index.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "start": "pnpm run build && electron .",
    "dev": "concurrently -k \"vite dev\" \"tsc -p tsconfig.main.json --watch --preserveWatchOutput\" \"wait-on tcp:5173 dist/main/main/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173/app electron .\"",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "lint": "eslint src/",
    "release": "pnpm run build && electron-builder"
  },
  "keywords": [],
  "author": "Leonid Babikov <gestures-drawing-assistant@leonid.work>",
  "homepage": "https://github.com/leonidbabikov/gestures-drawing-assistant",
  "email": "gestures-drawing-assistant@leonid.work",
  "license": "SEE LICENSE IN LICENSE.MD",
  "packageManager": "pnpm@10.28.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "electron",
      "esbuild"
    ]
  },
  "dependencies": {
    "@radix-ui/themes": "^3.2.0",
    "better-sqlite3": "^11.0.0",
    "express": "^4.21.0",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.0",
    "@eslint/js": "^9.0.0",
    "@stylistic/eslint-plugin": "^2.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^5.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-array-func": "^5.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-promise": "^7.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "eslint-plugin-regexp": "^2.0.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sonarjs": "^3.0.0",
    "eslint-plugin-unicorn": "^56.0.0",
    "globals": "^15.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.gestures-drawing-assistant.app",
    "productName": "Gestures Drawing Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "loading.html",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": null
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": null
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/better-sqlite3/**"
    ]
  }
}
